<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.PersonaController"
            prefWidth="900" prefHeight="550"
            style="-fx-background-color: linear-gradient(to bottom, #F9E4B7, #F6D365);">
    <VBox alignment="TOP_CENTER" spacing="15"
          AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <Label fx:id="tituloLabel" text="Personas"
               style="-fx-font-size: 28px; -fx-text-fill: #6B4423; -fx-font-weight: bold;" />

        <HBox spacing="10" alignment="CENTER">
            <Button text="Actualizar" onAction="#recargarDatos"
                    style="-fx-background-color: #D88749; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 6 18;" />
            <Button text="Volver al menÃº" onAction="#volverMenu"
                    style="-fx-background-color: #6B4423; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 6 18;" />
            <Label fx:id="estadoLabel" text=""
                   style="-fx-text-fill: #6B4423; -fx-font-weight: bold;" />
        </HBox>

        <TableView fx:id="tabla" prefHeight="420" prefWidth="820"
                   style="-fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: rgba(107,68,35,0.3);" />
    </VBox>
</AnchorPane>
