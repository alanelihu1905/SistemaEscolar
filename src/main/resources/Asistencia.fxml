<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.AsistenciaController"
            prefWidth="950" prefHeight="600"
            style="-fx-background-color: #C19A6B;">

    <VBox alignment="CENTER" spacing="15"
          AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">

        <Label text="Gestión de Asistencias"
               style="-fx-font-size: 28px; -fx-text-fill: #3E2F1C; -fx-font-weight: bold;" />

        <HBox spacing="15" alignment="CENTER">
            <Label text="ID Inscripción:" style="-fx-text-fill: #3E2F1C;" />
            <TextField fx:id="idInscripcionTextField" prefWidth="120" />

            <Label text="Fecha:" style="-fx-text-fill: #3E2F1C;" />
            <DatePicker fx:id="datePicker" prefWidth="150" />
        </HBox>

        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="guardarButton" text="Guardar" onAction="#guardarButtonPressed"
                    style="-fx-background-color: #7B5E3B; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 8 25;" />

            <Button fx:id="verButton" text="Ver Asistencias" onAction="#verButtonPressed"
                    style="-fx-background-color: #A07855; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 8 25;" />

            <Button text="Limpiar" onAction="#limpiarCampos"
                    style="-fx-background-color: #E2B887; -fx-text-fill: #3E2F1C; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 8 25;" />
        </HBox>

        <TableView fx:id="tabla" prefWidth="900" prefHeight="380">
            <columns>
                <TableColumn fx:id="colIdAsistencia" text="ID Asistencia" prefWidth="100"/>
                <TableColumn fx:id="colIdInscripcion" text="ID Inscripción" prefWidth="130"/>
                <TableColumn fx:id="colFecha" text="Fecha" prefWidth="120"/>
                <TableColumn fx:id="colCreado" text="Creado en" prefWidth="200"/>
                <TableColumn fx:id="colActualizado" text="Actualizado en" prefWidth="200"/>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>